# CroabBoard Docker Environment Configuration
# Copy this file to .env and update the values for your environment

# Database Configuration
MYSQL_ROOT_PASSWORD=croabboard_super_secure_root_password_2024
MYSQL_DATABASE=croabboard
MYSQL_USER=croabboard_user
MYSQL_PASSWORD=croabboard_secure_password_2024

# Application Security
SESSION_SECRET=your-super-secure-session-secret-key-minimum-64-characters-long
BCRYPT_ROUNDS=12

# Redis Configuration (Optional - for session scaling)
REDIS_PASSWORD=croabboard_redis_secure_password_2024

# Production URLs (Update for your domain or IP)
# For IP-based access, use: http://YOUR-IP or http://localhost
# For domain-based access, use: https://your-domain.com
FRONTEND_URL=http://localhost
BACKEND_URL=http://localhost

# File Upload Limits
MAX_FILE_SIZE=10485760  # 10MB
MAX_UPLOAD_FILES=10

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds

# CORS Settings
# For IP-based access, use: http://YOUR-IP
# For domain-based access, use: https://your-domain.com
CORS_ORIGIN=http://localhost

# SSL Settings (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring (Optional)
ENABLE_MONITORING=false
PROMETHEUS_PORT=9090

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Development Settings (set to false in production)
NODE_ENV=production
DEBUG=false
ENABLE_CORS=true

# Proxy Configuration (for docker-compose.proxy.yml)
PROXY_PORT=80
# PROXY_SSL_PORT=443  # Uncomment to enable HTTPS

# Corporate Proxy Settings (Optional - for enterprise environments)
# Uncomment and configure if behind a corporate proxy
# HTTP_PROXY=http://proxy.company.com:8080
# HTTPS_PROXY=http://proxy.company.com:8080
# NO_PROXY=localhost,127.0.0.1